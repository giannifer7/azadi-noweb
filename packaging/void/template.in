# Template file for '{{ package_name }}'
pkgname={{ package_name }}
version={{ version }}
revision=1
build_style=cargo
short_desc="{{ description }}"
maintainer="{{ maintainer_name }} <{{ maintainer_email }}>"
license="{{ license }}"
homepage="{{ repo_url }}"
distfiles="${homepage}/archive/v${version}.tar.gz"
sha512sum="{{ sha512sum }}"

do_install() {
    vbin target/release/$pkgname
    vlicense LICENSE
    vdoc README.md
}
